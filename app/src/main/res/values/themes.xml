<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="fs" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">#4980CF</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">#BADA8C</item>
        <item name="android:textStyle">bold</item >
    </style>

    <style name="fs2" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">#C9F0EC</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">#125B64</item>
        <item name="android:textStyle">bold</item >
    </style>
    <style name="fs1" parent="Theme.AppCompat.DayNight">
